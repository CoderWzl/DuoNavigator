<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigator_container"
    android:layout_width="@dimen/duo_navigator_width"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/navigator_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <com.shoujiduoduo.duonavigator.ObservableScrollView
        android:id="@+id/navigator_tab_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/navigator_tab_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </com.shoujiduoduo.duonavigator.ObservableScrollView>

</FrameLayout>